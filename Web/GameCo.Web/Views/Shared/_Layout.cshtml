@using GameCo.Data.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameCo</title>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/Rating.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body >
    <div class="container-fluid app-container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light pt-3 pb-3 greengradient" >
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/logo.png">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" style="font-size:18px" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" style="font-size:18px" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Administration
                                    </a>
                                    <div class="dropdown-menu bgcolor" aria-labelledby="navbarDropdown">
                                        <a class="nav-link ml-3" style="font-size:18px" asp-controller="Administration" asp-action="ListAllRoles">List of Roles</a>
                                        <div class="dropdown-divider bgcolor" style="border-color:deepskyblue"></div>
                                        <a class="nav-link ml-3" style="font-size:18px" asp-controller="Games" asp-action="CreateGame">Create a game</a>
                                        <div class="dropdown-divider bgcolor" style="border-color:deepskyblue"></div>
                                        <a class="nav-link ml-3" style="font-size:18px" asp-controller="Achievements" asp-action="CreateAchievement">Create achievement</a>
                                    </div>
                                </li>
                            }

                            <li class="nav-item active">
                                <a class="nav-link" style="font-size:18px" asp-controller="File" asp-action="ListAllFiles">Download games</a>
                            </li>

                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout from: @User.Identity.Name </button>
                                </form>
                            </li>

                        }

                        else
                        {
                            <li class="nav-item active">
                                <a class="nav-link" style="font-size:18px" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item active">
                                <a class="nav-link" style="font-size:18px" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" style="font-size:18px" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
        <main role="main">
            @RenderBody()
        </main>
        <footer class="greengradient">
            <p2>GameCo, Copyright &copy; 2021</p2>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
