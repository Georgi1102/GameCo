@using GameCo.WebModels.Binding;
@model CreateGameBindingModel


<div class="creategamebox">
    <img src="~/Images/AddGame.png" class="avatar"/>
    <div class="row ml-5 mt-5 mb-3">
        <div>
            <form method="post" enctype="multipart/form-data" asp-controller="Games" asp-action="CreateGame">
                <hc>Create a Game</hc>

                <div class="form-group mr-5">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control textbox" placeholder="Enter game name:" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mt-3 mb-3">
                    <h4>Choose game to upload</h4>
                    <input asp-for="GameFile" type="file" />
                    <span asp-validation-for="GameFile" class="text-danger"></span>

                </div>
                <div class="mt-3 mb-3 mr-5">
                    <h4>Choose image for the game</h4>
                    <input asp-for="ImageFile" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="text-center mr-5">
                    <button type="submit" class="btn btn-customCG">Create game</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
