@using GameCo.WebModels.Binding;
@model CreateGameBindingModel


@{ ViewData["Title"] = "Create Game"; }

<div class="col-md-4 ml-2 mt-4">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="row ml-2 mt-1">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a Game.</h4>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter game name:" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom">CreateGame</button>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
