@model CrateRoleViewModel

@{ ViewData["Title"] = "Create Role"; }

<div class="col-md-4 ml-2 mt-4">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="row ml-2 mt-1">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a Role.</h4>
           
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="NameRole"></label>
                <input asp-for="NameRole" class="form-control" placeholder="Enter email:" />
                <span asp-validation-for="NameRole" class="text-danger"></span>
            </div>
          
            <button type="submit" class="btn btn-custom">CreateRole</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
