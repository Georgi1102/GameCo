@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Tite = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="CreateRole" asp-controller="administration">Add role</a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="administration" asp-route-id="@role.Id"> Edit</a>
                <a href="#" class="btn btn-danger"> Delete</a>
            </div>
        </div>      
    }
}

else
{
    <div class="card">
        <div class="card-header">
            No Roles created!
        </div>

        <div class="card-body">
            <h5 class="card-title">
                With the button below you can create a role.
            </h5>
            <a class="btn btn-primary" asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}