@model EditRoleModel

@{ 
    ViewBag.Title = "Edit Role";
}


<div>
    <div class="text-center">
        <h1>Edit Role</h1>
    </div>

    <form method="post" class="mt-3 ">
        <div >
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-3">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
        </div>
        

        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="RoleName" class="form-control">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="ml-3">
                <button type="submit" class="btn btn-green">Update</button>
                <a asp-action="ListAllRoles" class="btn btn-red">Cancel</a>
            </div>
        </div>

        <div class="card text-center">
            <div class="card-header">
                <h3>Users who are in this User-Role</h3>
            </div>

            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }

                else
                {
                    <h5 class="card-title">There are no user who are assigned to this group</h5>
                }
            </div>

            <div class="card-footer">
                <a asp-action="AssignUserRole" asp-controller="administration"
                   asp-route-roleId="@Model.Id" class="btn btn-green" style="width:auto">Add or remove users</a>
            </div>
        </div>
    </form>
</div>

