@model AchievementViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="addachievementbox">
    <img src="~/Images/AddStar.png" class="avatar" />
    <div class="row ml-5 mt-5 mb-3 mr-5 ">
        <form asp-controller="Achievements" asp-action="CreateAchievement" method="post" role="form">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control textbox" placeholder="Enter achievement name:" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control textbox" placeholder="Enter description:" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="GameId"></label>
                <select asp-for="GameId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.ListofAchievements,"Value", "Text"))">
                </select>
            </div>
            <div class="form-group text-center">
                <input id="Submit1" class="btn btn-custom" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>